            ],
            "filters": {
                "branches": {
                    "only": [
                        "/^foundation.*/"
                    ]
                },
                "user_overridable": false
            }
        },
        "publish": {
            "context": [
                "CircleCI",
                "cloudsmith-publish-account",
                "cosign-signing",
                "docker-content-trust",
                "docker-publish-account",
                "azure-sp-dct"
            ],
            "requires": [
                "horizon-deb-build",
                "horizon-rpm-build",
                "horizon-image-single-arch",
                "minion-deb-build",
                "minion-rpm-build",
                "minion-image-single-arch",
                "sentinel-deb-build",
                "sentinel-rpm-build",
                "sentinel-image-single-arch",
                "integration-test"
            ],
            "filters": {
                "branches": {
                    "only": [
                        "develop",
                        "/^master-.*/",
                        "/^release-.*/",
                        "/^foundation.*/"
                    ]
                },
                "user_overridable": false
            }
        },
        "publish-maven": {
            "context": [
                "CircleCI",
                "gpg-signing",
                "OSSRH Principal"
            ],
            "requires": [
                "publish"
            ],
            "filters": {
                "branches": {
                    "only": [
                        "develop",
                        "/^master-.*/",
                        "/^release-.*/"
                    ]
                },
                "user_overridable": false
            }
        },
        "integration-test-with-coverage": {
            "context": [
                "CircleCI",
                "docker-publish-account",
                "SonarCloud"
            ],
            "requires": [
                "build"
            ]
        },
        "code-coverage": {
            "context": [
                "CircleCI",
                "SonarCloud"
            ],
            "requires": [
                "integration-test-with-coverage"
            ]
        }
