                "integration-test"
            ],
            "filters": {
                "branches": {
                    "only": [
                        "/^foundation.*/"
                    ]
                },
                "user_overridable": false
            }
        },
        "merge-poweredby-branch": {
            "requires": [
                "horizon-deb-build",
                "horizon-rpm-build",
                "horizon-image-single-arch",
                "minion-deb-build",
                "minion-rpm-build",
                "minion-image-single-arch",
                "sentinel-deb-build",
