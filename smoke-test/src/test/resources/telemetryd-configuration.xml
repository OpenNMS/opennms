<?xml version="1.0"?>
<telemetryd-config>
  <protocol name="JTI" description="Junos Telemetry Interface (JTI)">
    <listener name="JTI-UDP-50000" class-name="org.opennms.netmgt.telemetry.listeners.udp.UdpListener">
      <parameter key="port" value="50000"/>
    </listener>

    <adapter name="JTI-GPB" class-name="org.opennms.netmgt.telemetry.adapters.jti.JtiGpbAdapter">
      <parameter key="script" value="etc/telemetryd-adapters/junos-telemetry-interface.groovy" />
    </adapter>

    <package name="JTI-Default">
      <rrd step="300">
        <rra>RRA:AVERAGE:0.5:1:2016</rra>
        <rra>RRA:AVERAGE:0.5:12:1488</rra>
        <rra>RRA:AVERAGE:0.5:288:366</rra>
        <rra>RRA:MAX:0.5:288:366</rra>
        <rra>RRA:MIN:0.5:288:366</rra>
      </rrd>
    </package>
  </protocol>
</telemetryd-config>