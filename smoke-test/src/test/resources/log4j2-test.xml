<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
        </Console>
    </Appenders>
    <Loggers>
        <!-- stuff that comes from testcontainers -->
        <Logger name="org.testcontainers" level="INFO" additivity="false">
            <AppenderRef ref="Console"/>
        </Logger>
        <Logger name="com.github.dockerjava" level="WARN" additivity="false">
            <AppenderRef ref="Console"/>
        </Logger>
        <Logger name="com.github.dockerjava.zerodep.shaded.org.apache.hc.client5.http.wire" level="OFF" additivity="false">
            <AppenderRef ref="Console"/>
        </Logger>
        <!-- StreamGobbler ðŸ¦ƒ is noisy -->
        <Logger name="org.opennms.smoketest.utils.StreamGobbler" level="INFO" additivity="false">
            <AppenderRef ref="Console"/>
        </Logger>
        <!-- Code from this project logs at DEBUG -->
        <Logger name="org.opennms.smoketest" level="DEBUG" additivity="false">
            <AppenderRef ref="Console"/>
        </Logger>
        <!-- JSCH is noisy -->
        <Logger name="com.jcraft.jsch" level="WARN" additivity="false">
            <AppenderRef ref="Console"/>
        </Logger>
        <!-- CXF PhaseInterceptorChain is noisy during startup before services are up -->
        <Logger name="org.apache.cxf.phase.PhaseInterceptorChain" level="ERROR" additivity="false">
            <AppenderRef ref="Console"/>
        </Logger>
        <Root level="INFO">
            <AppenderRef ref="Console"/>
        </Root>
    </Loggers>
</Configuration>
