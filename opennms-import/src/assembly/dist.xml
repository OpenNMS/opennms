<assembly>
  <id>dist</id>
  <formats>
    <format>tar.gz</format>
  </formats>
  <includeBaseDirectory>false</includeBaseDirectory>
  <fileSets>
    <fileSet>
      <includes>
        <include>README*</include>
        <include>LICENSE*</include>
        <include>NOTICE*</include>
      </includes>
      <excludes>
        <exclude>README.eclipse</exclude>
      </excludes>
    </fileSet>
    <fileSet>
      <directory>src/etc</directory>
      <outputDirectory>etc</outputDirectory>
    </fileSet>
    <fileSet>
      <!-- TODO: use expressions instead: ${project.build.directory}, ${project.build.finalName}, or have a <build /> tag to include the built artifact -->
      <directory>target</directory>
      <outputDirectory>lib</outputDirectory>
      <includes>
        <include>*.jar</include>
      </includes>
    </fileSet>
  </fileSets>
  <dependencySets>
    <dependencySet>
      <outputFileNameMapping>opennms-model-${project.version}.jar</outputFileNameMapping>
      <outputDirectory>lib</outputDirectory>
      <includes>
        <include>org.opennms:opennms-model:jar:${project.version}</include>
      </includes>
    </dependencySet>
    <dependencySet>
      <outputDirectory>lib</outputDirectory>
      <excludes>
        <exclude>org.opennms:opennms-model</exclude>
      </excludes>
    </dependencySet>
  </dependencySets>
</assembly>
