<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xmlns:cm="http://aries.apache.org/blueprint/xmlns/blueprint-cm/v1.3.0"
           xsi:schemaLocation="
		http://www.osgi.org/xmlns/blueprint/v1.0.0
		https://osgi.org/xmlns/blueprint/v1.0.0/blueprint.xsd
		http://aries.apache.org/blueprint/xmlns/blueprint-cm/v1.3.0
		http://aries.apache.org/schemas/blueprint-cm/blueprint-cm-1.3.0.xsd
">

    <cm:property-placeholder id="serverProperties" persistent-id="org.opennms.core.ipc.twin.grpc.publisher"
                             update-strategy="reload">
        <cm:default-properties>
            <cm:property name="port" value="8991"/>
        </cm:default-properties>
    </cm:property-placeholder>

    <reference id="configAdmin" interface="org.osgi.service.cm.ConfigurationAdmin" />

    <bean id="grpcTwinPublisher" class="org.opennms.core.ipc.twin.grpc.publisher.GrpcTwinPublisher"
          init-method="start" destroy-method="close">
        <argument ref="localTwinSubscriber"/>
        <argument ref="configAdmin"/>
        <argument value="${port}"/>
    </bean>

    <bean id="localTwinSubscriber" class="org.opennms.core.ipc.twin.common.LocalTwinSubscriberImpl"/>

    <service ref="localTwinSubscriber" interface="org.opennms.core.ipc.twin.common.LocalTwinSubscriber"/>

    <service ref="grpcTwinPublisher" interface="org.opennms.core.ipc.twin.api.TwinPublisher">
        <service-properties>
            <entry key="strategy" value="grpc"/>
            <entry key="registration.export" value="true"/>
        </service-properties>
    </service>


</blueprint>
