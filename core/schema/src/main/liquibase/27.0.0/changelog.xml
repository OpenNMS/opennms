<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-2.0.xsd" >

    <changeSet runOnChange="false" author="cpape" id="27.0.0-rp-change">
        <sql>
            DELETE FROM monitoringsystems WHERE type='Remote Poller';
        </sql>

        <dropUniqueConstraint tableName="location_specific_status_changes" constraintName="location_specific_status_changes_systemid_fkey"/>
        <dropColumn tableName="location_specific_status_changes" columnName="systemid"/>
        <addColumn tableName="location_specific_status_changes">
            <column name="location" type="text">
                <constraints nullable="false"/>
            </column>
        </addColumn>
        <createIndex tableName="location_specific_status_changes" indexName="location_specific_status_changes_location">
            <column name="location"></column>
        </createIndex>
        <createIndex tableName="location_specific_status_changes" indexName="location_specific_status_changes_location_ifserviceid">
            <column name="location"></column>
            <column name="ifserviceid"></column>
        </createIndex>
        <createIndex unique="true" tableName="location_specific_status_changes" indexName="location_specific_status_changes_location_if_time">
            <column name="location"></column>
            <column name="ifserviceid"></column>
            <column name="statustime"></column>
        </createIndex>
    </changeSet>
    <changeSet author="patrick.schweizer" id="27.0.0-remote-poller-tables">
        <createTable tableName="application_perspective_location_map" remarks="locations from where an application shoud be monitored">
            <column name="app_id" type="bigint">
                <constraints nullable="false" />
            </column>
            <column name="monitoring_location_id" type="text">
                <constraints nullable="false" />
            </column>
        </createTable>
        <addForeignKeyConstraint constraintName="application_id_fkey1"
                                 baseTableName="application_perspective_location_map" baseColumnNames="app_id"
                                 referencedTableName="applications" referencedColumnNames="id" onDelete="CASCADE"/>
        <addForeignKeyConstraint constraintName="monitoring_Location_fkey2"
                                 baseTableName="application_perspective_location_map" baseColumnNames="monitoring_location_id"
                                 referencedTableName="monitoringlocations" referencedColumnNames="id" onDelete="CASCADE"/>
        <createIndex tableName="application_perspective_location_map" indexName="apl_appid_idx" unique="false">
            <column name="app_id" />
        </createIndex>
        <createIndex tableName="application_perspective_location_map" indexName="monitoring_location_id_idx" unique="false">
            <column name="monitoring_location_id" />
        </createIndex>
        <createIndex tableName="application_perspective_location_map" indexName="appid_monitoringloationid_idx" unique="true">
            <column name="app_id" />
            <column name="monitoring_location_id" />
        </createIndex>
    </changeSet>
</databaseChangeLog>
