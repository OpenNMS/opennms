<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-2.0.xsd" >

    <changeSet runOnChange="false" author="cpape" id="27.0.0-rp-change">
        <sql>
            DELETE FROM monitoringsystems WHERE type='Remote Poller';
        </sql>

        <dropUniqueConstraint tableName="location_specific_status_changes" constraintName="location_specific_status_changes_systemid_fkey"/>
        <dropColumn tableName="location_specific_status_changes" columnName="systemid"/>
        <addColumn tableName="location_specific_status_changes">
            <column name="location" type="text">
                <constraints nullable="false"/>
            </column>
        </addColumn>
        <createIndex tableName="location_specific_status_changes" indexName="location_specific_status_changes_location">
            <column name="location"></column>
        </createIndex>
        <createIndex tableName="location_specific_status_changes" indexName="location_specific_status_changes_location_ifserviceid">
            <column name="location"></column>
            <column name="ifserviceid"></column>
        </createIndex>
        <createIndex unique="true" tableName="location_specific_status_changes" indexName="location_specific_status_changes_location_if_time">
            <column name="location"></column>
            <column name="ifserviceid"></column>
            <column name="statustime"></column>
        </createIndex>
    </changeSet>

    <changeSet runOnChange="false" author="cpape" id="27.0.0-outages-perspective">
        <addColumn tableName="outages">
            <column name="perspective" type="text"/>
        </addColumn>
        <addForeignKeyConstraint baseTableName="outages" baseColumnNames="perspective" constraintName="fk_outages_perspective" referencedTableName="monitoringlocations" referencedColumnNames="id" onDelete="CASCADE" onUpdate="CASCADE"/>
    </changeSet>

    <changeSet author="cpape" id="27.0.0-unique-outages-per-location">
        <dropIndex tableName="outages" indexName="one_outstanding_outage_per_service_idx"/>
        <sql>
            CREATE UNIQUE INDEX one_outstanding_outage_per_service_and_location_idx1
              ON outages (ifserviceid)
              WHERE perspective IS NULL AND ifregainedservice IS NULL;

            CREATE UNIQUE INDEX one_outstanding_outage_per_service_and_location_idx2
              ON outages (ifserviceid, perspective)
              WHERE NOT perspective IS NULL AND ifregainedservice IS NULL;
        </sql>
    </changeSet>

</databaseChangeLog>
