<?xml version="1.0" encoding="UTF-8"?>
 
<databaseChangeLog
	xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
	xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-2.0.xsd
		http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

	<changeSet author="rangerrick" id="1.6.0-vulnerabilities">
		<preConditions onFail="MARK_RAN">
			<not><tableExists tableName="vulnerabilities" /></not>
		</preConditions> 

		<!-- This table maintains a record of vulnerabilities that have been detected on target IP addresses. -->
		<createTable tableName="vulnerabilities">

			<!-- Unique integer identifier for the outage -->
			<column name="vulnerabilityid" type="integer">
				<constraints nullable="false" primaryKey="true" primaryKeyName="pk_vulnerabilityid" />
			</column>

			<!-- Unique integer identifier for node -->
			<column name="nodeid" type="integer" />

			<!-- IP Address of node's interface -->
			<column name="ipaddr" type="varchar(16)" />

			<!-- Unique integer identifier of service/poller package -->
			<column name="serviceid" type="integer" />

			<!-- Initial creation time of the vulnerability -->
			<column name="creationtime" type="DATETIME">
				<constraints nullable="false" />
			</column>

			<!-- Last time that an attempt was made to scan for this vulnerability -->
			<column name="lastattempttime" type="DATETIME">
				<constraints nullable="false" />
			</column>

			<!-- Most recent successful scan time -->
			<column name="lastscantime" type="DATETIME">
				<constraints nullable="false" />
			</column>

			<!-- Time after which the vulnerability was no longer detected -->
			<column name="resolvedtime" type="DATETIME" />

			<!-- Severity of the vulnerability (identical to event severities) -->
			<column name="severity" type="integer">
				<constraints nullable="false" />
			</column>

			<!-- ID number of the plugin that produced the vulnerability -->
			<column name="pluginid" type="integer">
				<constraints nullable="false" />
			</column>

			<!-- Specific vulnerability type generated by the plugin -->
			<column name="pluginsubid" type="integer">
				<constraints nullable="false" />
			</column>

			<!-- Terse description of vulnerability (usually the plugin name plus short description) -->
			<column name="logmsg" type="varchar(256)" />

			<!-- Verbose description of vulnerability -->
			<column name="descr" type="text" />

			<!-- Port that the vulnerability affects -->
			<column name="port" type="integer" />

			<!-- Network protocol of the attack (TCP, UDP, ICMP) -->
			<column name="protocol" type="varchar(32)" />

			<!-- The CVE entry for the vulnerability -->
			<column name="cveentry" type="varchar(255)" />
		</createTable>

		<createIndex tableName="vulnerabilities" indexName="vulnerabilities_nodeid_idx">
			<column name="nodeid" />
		</createIndex>
		<createIndex tableName="vulnerabilities" indexName="vulnerabilities_ipaddr_idx">
			<column name="ipaddr" />
		</createIndex>
		<createIndex tableName="vulnerabilities" indexName="vulnerabilities_severity_idx">
			<column name="severity" />
		</createIndex>
		<createIndex tableName="vulnerabilities" indexName="vulnerabilities_port_idx">
			<column name="port" />
		</createIndex>
		<createIndex tableName="vulnerabilities" indexName="vulnerabilities_protocol_idx">
			<column name="protocol" />
		</createIndex>

	</changeSet>

</databaseChangeLog>