<?xml version="1.0" encoding="UTF-8"?>
 
<databaseChangeLog
	xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
	xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-2.0.xsd
		http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

	<changeSet author="rangerrick" id="1.6.0-map">
		<preConditions onFail="MARK_RAN">
			<not><tableExists tableName="map" /></not>
		</preConditions>

		<!-- This table maintains a record of map defined in opennms -->
		<createTable tableName="map">

			<!-- Unique integer identifier of the map -->
			<column name="mapid" type="integer">
				<constraints nullable="false" primaryKey="true" primaryKeyName="pk_mapid" />
			</column>

			<!-- Identifier of the map -->
			<column name="mapname" type="varchar(40)">
				<constraints nullable="false" />
			</column>

			<!-- background image assocated with map -->
			<column name="mapbackground" type="varchar(256)" />

			<!-- user who has the ownership of the map (also the user that created the map) -->
			<column name="mapowner" type="varchar(64)">
				<constraints nullable="false" />
			</column>

			<!-- The time the map was created -->
			<column name="mapcreatetime" type="DATETIME">
				<constraints nullable="false" />
			</column>

			<!-- a 6 character sequence rwrwrw to access the map owner/group/all permission -->
			<column name="mapaccess" type="char(6)">
				<constraints nullable="false" />
			</column>

			<!-- the user who last modified the map -->
			<column name="userlastmodifies" type="varchar(64)">
				<constraints nullable="false" />
			</column>

			<!-- The last time the map was modified -->
			<column name="lastmodifiedtime" type="DATETIME">
				<constraints nullable="false" />
			</column>

			<!-- A float scale factor for the map -->
			<column name="mapscale" type="float8" />

			<!-- An Integer representing the offset in pixels -->
			<column name="mapxoffset" type="integer" />

			<!-- An Integer representing the offset in pixels -->
			<column name="mapyoffset" type="integer" />

			<!-- Flag indicating the type of the map.
				'A' - Map generated automatically
				'U' - Map generated by user
				'D' - Map deleted // FOR FUTURE USE -->
			<column name="maptype" type="char(1)" />

			<!-- Width of the map -->
			<column name="mapwidth" type="integer">
				<constraints nullable="false" />
			</column>

			<!-- Height of the map -->
			<column name="mapheight" type="integer">
				<constraints nullable="false" />
			</column>
		</createTable>

	</changeSet>

</databaseChangeLog>