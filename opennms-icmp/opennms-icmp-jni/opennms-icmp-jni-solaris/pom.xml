<?xml version="1.0" encoding="UTF-8"?><project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <parent>
    <artifactId>opennms-icmp-jni</artifactId>
    <groupId>org.opennms</groupId>
    <version>1.3.6-SNAPSHOT</version>
  </parent>
  <modelVersion>4.0.0</modelVersion>
  <artifactId>opennms-icmp-jni-solaris</artifactId>
  <packaging>so</packaging>
  <name>OpenNMS ICMP JNI Library - Solaris</name>
  <build>
    <plugins>
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>native-maven-plugin</artifactId>
        <extensions>true</extensions>
        <executions>
          <execution>
            <phase>generate-sources</phase>
            <goals>
              <goal>javah</goal>
            </goals>
            <configuration>
              <classNames>
                <className>org.opennms.protocols.icmp.IcmpSocket</className>
              </classNames>
            </configuration>
          </execution>
        </executions>
        <configuration>
          <compilerProvider>generic</compilerProvider>
          <compilerStartOptions>
            <compilerStartOption>-fPIC -Wall -Werror -O -D${platform.define} ${build.jni.compiler.arg}</compilerStartOption>
          </compilerStartOptions>
          <sources>
            <source>
              <directory>../src/main/native</directory>
              <fileNames>
                <fileName>IcmpSocket.c</fileName>
              </fileNames>
            </source>
          </sources>
          <linkerStartOptions>
            <linkerStartOption>-shared ${build.jni.compiler.arg} ${build.jni.linker.arg} -lc -ldl</linkerStartOption>
          </linkerStartOptions>
          <javahOS>${platform.javahOS}</javahOS>
          <jdkIncludePath>${platform.jdk.include.dir}</jdkIncludePath>
        </configuration>
      </plugin>
    </plugins>
  </build>
</project>
