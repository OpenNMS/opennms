<blueprint
    xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:cm="http://aries.apache.org/blueprint/xmlns/blueprint-cm/v1.3.0"
    xsi:schemaLocation="http://www.osgi.org/xmlns/blueprint/v1.0.0 https://osgi.org/xmlns/blueprint/v1.0.0/blueprint.xsd">

    <reference id="deviceConfigSinkModule" interface="org.opennms.features.deviceconfig.sink.module.DeviceConfigSinkModule" availability="mandatory" />
    <reference id="ipInterfaceDao"         interface="org.opennms.netmgt.dao.api.IpInterfaceDao" availability="mandatory" />
    <reference id="deviceConfigDao"        interface="org.opennms.features.deviceconfig.persistence.api.DeviceConfigSinkModule" availability="mandatory" />

    <bean id="deviceConfigConsumer" class="org.opennms.features.deviceconfig.sink.consumer.DeviceConfigConsumer">
        <argument ref="deviceConfigSinkModule"/>
        <argument ref="ipInterfaceDao"/>
        <argument ref="deviceConfigDao"/>
    </bean>

    <service ref="deviceConfigConsumer" interface="org.opennms.core.ipc.sink.api.MessageConsumer"/>

</blueprint>
