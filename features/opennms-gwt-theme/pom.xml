  <packaging>jar</packaging>
  <name>OpenNMS GWT Theme</name>

  <build>
    
    <plugins>

      <!-- GWT Maven Plugin -->
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>gwt-maven-plugin</artifactId>
        <version>${gwtVersion}</version>
        <configuration>
          <cssFiles>
            <cssFile>gwt/theme/OpennmsTheme_rtl.css</cssFile>
            <cssFile>gwt/theme/OpennmsTheme.css</cssFile>
          </cssFiles>
        </configuration>
        <executions>
          <execution>
            <goals>
              <goal>resources</goal>
            </goals>
          </execution>
        </executions>
      </plugin>

    </plugins>
  

  </build>

