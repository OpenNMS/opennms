            <entry key="operation.menuLocation" value="Edit|Layout"/>
            <entry key="operation.label" value="Simple Layout"/>
        </service-properties>
        <bean class="org.opennms.features.topology.app.internal.operations.SimpleLayoutOperation"/>
    </service>
