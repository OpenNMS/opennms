<?xml version="1.0" encoding="UTF-8"?>
<project xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://maven.apache.org/POM/4.0.0" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <parent>
    <groupId>org.opennms.features.topology</groupId>
    <artifactId>features</artifactId>
    <version>19.0.0-SNAPSHOT</version>
  </parent>
  <modelVersion>4.0.0</modelVersion>
  <groupId>org.opennms.osgi.features.topology</groupId>
  <artifactId>opennms-topology-runtime-asset</artifactId>
  <name>OpenNMS :: Features :: Topology :: Features :: Runtime :: Asset</name>
  <description>Asset runtime and plugins for the OpenNMS topology web app.</description>
  <packaging>pom</packaging>
  <build>
    <plugins>
      <!-- Filter the features.xml file -->
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-resources-plugin</artifactId>
        <executions>
          <execution>
            <id>copy-resources</id>
            <!-- Move this task from process-resources to generate-resources in the build cycle so that it is available for the features-maven-plugin. -->
            <phase>generate-resources</phase>
            <goals>
              <goal>copy-resources</goal>
            </goals>
            <configuration>
              <outputDirectory>${project.build.outputDirectory}</outputDirectory>
              <resources>
                <resource>
                  <directory>src/main/resources</directory>
                  <filtering>true</filtering>
                </resource>
              </resources>
            </configuration>
          </execution>
        </executions>
      </plugin>

      <plugin>
        <groupId>org.opennms.maven.plugins</groupId>
        <artifactId>features-maven-plugin</artifactId>
        <configuration>
          <!-- This option will recursively pull the all of the <repository> references inside all of -->
          <!-- the referenced repositories and put all of their features into -->
          <!-- a single <features> repository. -->
          <importRepositories>true</importRepositories>
          <!-- plugin fails if this empty exclusions not present -->
          <importRepositoryExclusions>
            <value>vaadin</value>
            <value>opennms-topology-api</value>
            <value>opennms-topology-runtime-base</value>
          </importRepositoryExclusions>
          <repositories>
            <repository>mvn:${project.groupId}/opennms-topology-runtime-base/${project.version}/xml/features</repository>
            <!-- filtered local resources features file -->
            <repository>file:${project.build.outputDirectory}/features.xml</repository>
          </repositories>
          <features>
            <feature>opennms-topology-runtime-graphml</feature>
            <feature>opennms-topology-runtime-base</feature>
            <feature>opennms-topology-asset</feature>
          </features>
        </configuration>
      </plugin>
    </plugins>
  </build>
  <dependencies>
    <dependency>
      <groupId>org.opennms.osgi.features.topology</groupId>
      <artifactId>opennms-topology-runtime-base</artifactId>
      <version>${project.version}</version>
      <classifier>features</classifier>
      <type>xml</type>
      <scope>provided</scope>
    </dependency>
    <!-- <dependency> -->
    <!-- <groupId>org.opennms.features.topology.plugins.topo</groupId> -->
    <!-- <artifactId>asset</artifactId> -->
    <!-- <version>${project.version}</version> -->
    <!-- </dependency> -->
  </dependencies>
</project>
