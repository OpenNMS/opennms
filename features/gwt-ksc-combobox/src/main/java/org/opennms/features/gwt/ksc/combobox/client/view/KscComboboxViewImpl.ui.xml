<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.outlineBorder{
		      border: 1px solid #B5B8C8;
		}
	</ui:style>
	<g:LayoutPanel ui:field="m_layoutPanel" styleName="{style.outlineBorder}">
	   <g:layer top="0" bottom="0" left="0" right="53px">
	       <g:TextBox ui:field="m_textBox"/>
	   </g:layer>
	   <g:layer top="0" bottom="0" right="0" width="53px">
	       <g:Button ui:field="m_searchButton">Search</g:Button>
	   </g:layer>
	</g:LayoutPanel>
</ui:UiBinder> 