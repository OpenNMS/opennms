<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://www.osgi.org/xmlns/blueprint/v1.0.0 http://www.osgi.org/xmlns/blueprint/v1.0.0/blueprint.xsd">

    <reference id="transactionOperations" interface="org.springframework.transaction.support.TransactionOperations" availability="mandatory"/>
    <reference id="businessServiceDao" interface="org.opennms.netmgt.bsm.persistence.api.BusinessServiceDao" availability="mandatory"/>
    <reference id="monitoringServiceDao" interface="org.opennms.netmgt.bsm.persistence.api.MonitoredServiceDao" availability="mandatory"/>

    <bean id="businesssServiceManager" class="org.opennms.web.rest.v2.bsm.service.BusinessServiceManager">
        <property name="businessServiceDao" ref="businessServiceDao"/>
        <property name="monitoringServiceDao" ref="monitoringServiceDao"/>
    </bean>
    <bean id="bsmUi" class="org.opennms.features.bsm.vaadin.masterpage.BusinessServiceMasterPageUI" scope="prototype">
        <argument ref="transactionOperations"/>
        <property name="businessServiceManager" ref="businesssServiceManager"/>
    </bean>
	<bean id="bsmMasterPageApplicationFactory" class="org.opennms.features.bsm.vaadin.masterpage.BusinessServiceMasterPageUIFactory" scope="singleton">
        <argument ref="blueprintContainer"/>
        <argument value="bsmUi"/>
    </bean>
    <bean id="bsmMasterPageUi" class="org.opennms.features.bsm.vaadin.masterpage.AdminPageNavEntry">
        <property name="url" value="admin/bsm/masterpage.jsp" />
        <property name="name" value="Business Service Monitoring Master Page" />
    </bean>

    <service interface="org.opennms.vaadin.extender.ApplicationFactory" ref="bsmMasterPageApplicationFactory">
        <service-properties>
            <entry key="alias" value="/bsm-master-page" />
        </service-properties>
    </service>
    <service interface="org.opennms.web.navigate.PageNavEntry" ref="bsmMasterPageUi">
        <service-properties>
            <entry key="Page" value="admin" />
            <entry key="Category" value="service-monitoring" />
            <entry key="registration.export" value="true" />
        </service-properties>
    </service>
</blueprint>
