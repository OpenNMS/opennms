  <name>OpenNMS :: Features :: Discovery</name>
  <packaging>bundle</packaging>
  <properties>
    <skipITs>true</skipITs>
  </properties>
  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.felix</groupId>
        <artifactId>maven-bundle-plugin</artifactId>
        <extensions>true</extensions>
        <configuration>
          <instructions>
            <Bundle-RequiredExecutionEnvironment>JavaSE-1.8</Bundle-RequiredExecutionEnvironment>
            <Bundle-SymbolicName>${project.artifactId}</Bundle-SymbolicName>
            <Bundle-Version>${project.version}</Bundle-Version>
          </instructions>
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-failsafe-plugin</artifactId>
        <configuration>
          <skipITs>${skipITs}</skipITs>
          <reuseForks>false</reuseForks>
        </configuration>
        <executions>
          <execution>
            <goals>
              <goal>integration-test</goal>
              <goal>verify</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>build-helper-maven-plugin</artifactId>
        <executions>
          <execution>
            <id>attach-artifacts</id>
            <phase>package</phase>
            <goals>
              <goal>attach-artifact</goal>
            </goals>
            <configuration>
              <artifacts>
                <!-- The Discovery scheduler -->
                <artifact>
                  <file>blueprint-discovery.xml</file>
                  <type>xml</type>
                  <classifier>blueprint-discovery</classifier>
                </artifact>
                <!-- The Discoverer that performs pings for a location -->
                <artifact>
                  <file>blueprint-discoverer.xml</file>
                  <type>xml</type>
                  <classifier>blueprint-discoverer</classifier>
                </artifact>
                <!-- The DistPollerDao for a Minion system -->
                <artifact>
                  <file>blueprint-discovery-distPollerDaoMinion.xml</file>
                  <type>xml</type>
                  <classifier>blueprint-discovery-distPollerDaoMinion</classifier>
                </artifact>
              </artifacts>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
