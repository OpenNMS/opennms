      <bean ref="snmpMetricRepository" method="createRequestForAgent"/>
      <bean ref="snmpCollector" method="collect"/>
      <log loggingLevel="DEBUG" message="sampler-snmp blueprint.xml: ${body}"/>
      <to uri="seda:sampleSets"/>
    </route>
    -->
