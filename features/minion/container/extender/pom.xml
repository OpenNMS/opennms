    <modelVersion>4.0.0</modelVersion>
    <groupId>org.opennms.features.minion.container</groupId>
    <artifactId>extender</artifactId>
    <packaging>bundle</packaging>
    <name>OpenNMS :: Features :: Minion :: Container :: Extender</name>

    <build>
