{
      "template":"opennms-*",
      "settings":{
         "index.refresh_interval":"5s"
      },
      "mappings":{
         "_default_":{
            "dynamic_templates":[
               {
                  "string_fields":{
                     "match_mapping_type":"string",
                     "match":"*",
                     "mapping":{
                        "index":"not_analyzed",
                        "omit_norms":true,
                        "type":"string",
                        "fields":{
                           "raw":{
                              "index":"not_analyzed",
                              "ignore_above":256,
                              "type":"string"
                           }
                        }
                     }
                  }
               }
            ],
            "properties":{
               "@version":{
                  "index":"not_analyzed",
                  "type":"string"
               },
               "eventparms":{
                  "index":"analyzed",
                  "type":"string"
               },
               "eventlogmsg":{
                  "index":"analyzed",
                  "type":"string"
               },
               "eventdescr":{
                  "index":"analyzed",
                  "type":"string"
               },
               "categories":{
                  "index":"analyzed",
                  "type":"string"
               },
               "eventseverity":{
                  "type":"long"
               },
               "dow":{
                  "type":"long"
               },
               "dom":{
                  "type":"long"
               },
               "hour":{
                  "type":"long"
               },
               "p_oids": {
                  "type": "nested"
               },
               "p_alarmseverity":{
                  "type":"long"
               },
               "p_oldseverity":{
                  "type":"long"
               },              
               "p_initialseverity":{
                  "type":"long"
               }, 
               "alarmackduration":{
                  "type":"long"
               },           
               "alarmclearduration":{
                  "type":"long"
               },
               "initialseverity":{
                  "type":"long"
               },              
               "severity":{
                  "type":"long"
               },
               "logmsg":{
                  "index":"analyzed",
                  "type":"string"
               },
               "description":{
                  "index":"analyzed",
                  "type":"string"
               },
               "alarmtype": {
                  "type": "short"
               }
            },
            "_all":{
               "enabled":true
            }
         }
      },
      "aliases":{

      }
}