<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-2.0.xsd
    http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">


    <changeSet id="35.0.0-eventconf-events-update-content-column-value"
               author="mwajahatabbasi">

        <!--
            Precondition:
            Run only if at least one row still contains the default '{}' JSON.
            If not, Liquibase marks the change as executed and skips the Java change.
        -->
        <preConditions onFail="MARK_RAN">
            <sqlCheck expectedResult="1">
                SELECT CASE
                WHEN EXISTS (
                SELECT 1 FROM eventconf_events
                WHERE xml_content IS NOT NULL AND content = '{}'
                ) THEN 1 ELSE 0
                END;
            </sqlCheck>
        </preConditions>

        <!-- Custom Java Change -->
        <ext:eventConfEventChange/>

    </changeSet>
</databaseChangeLog>