<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.osgi.org/xmlns/blueprint/v1.0.0 http://www.osgi.org/xmlns/blueprint/v1.0.0/blueprint.xsd">

    <bean id="businessServiceManager" class="org.opennms.netmgt.bsm.service.internal.BusinessServiceManagerImpl" />

    <bean id="bsmDashletFactory" class="org.opennms.features.vaadin.dashboard.dashlets.BSMDashletFactory" scope="singleton">
        <argument ref="businessServiceManager"/>

        <property name="name" value="BSM"/>
        <property name="boostable" value="true"/>
        <property name="dashboardSuitable" value="true"/>

        <property name="requiredParameters">
            <map>
                <entry key="param1" value="bla1"/>
                <entry key="param2" value="bla2"/>
            </map>
        </property>
        <property name="requiredParameterDescriptions">
            <map>
                <entry key="param1" value="Bla bla blupp"/>
                <entry key="param2" value="Bla bla blupp"/>
            </map>
        </property>
    </bean>

    <service ref="bsmDashletFactory" interface="org.opennms.features.vaadin.dashboard.model.DashletFactory"/>
</blueprint>
