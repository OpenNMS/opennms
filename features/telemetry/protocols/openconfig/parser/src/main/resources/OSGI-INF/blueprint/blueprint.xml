<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xmlns:cm="http://aries.apache.org/blueprint/xmlns/blueprint-cm/v1.1.0" xmlns:ext="http://aries.apache.org/blueprint/xmlns/blueprint-ext/v1.1.0"
           xsi:schemaLocation="
		http://www.osgi.org/xmlns/blueprint/v1.0.0
		http://www.osgi.org/xmlns/blueprint/v1.0.0/blueprint.xsd
		http://aries.apache.org/blueprint/xmlns/blueprint-cm/v1.1.0
		http://aries.apache.org/schemas/blueprint-cm/blueprint-cm-1.1.0.xsd
		http://aries.apache.org/blueprint/xmlns/blueprint-ext/v1.1.0
		http://aries.apache.org/schemas/blueprint-ext/blueprint-ext-1.1.xsd
">
  <reference id="telemetryRegistry" interface="org.opennms.netmgt.telemetry.api.registry.TelemetryRegistry" availability="mandatory" />

  <reference id="entityScopeProvider" interface="org.opennms.core.rpc.utils.mate.EntityScopeProvider" availability="mandatory" />

  <reference id="ipInterfaceDao" interface="org.opennms.netmgt.dao.api.IpInterfaceDao"/>

  <reference id="connectionFactory" interface="org.opennms.netmgt.telemetry.stream.listeners.ConnectionFactory" availability="mandatory"/>

  <!-- OpenConfig Parser Factory -->
  <bean id="openconfigParserFactory" class="org.opennms.netmgt.telemetry.protocols.openconfig.parser.OpenConfigParserFactory">
    <argument ref="telemetryRegistry" />
    <argument ref="entityScopeProvider" />
    <argument ref="ipInterfaceDao" />
    <argument ref="connectionFactory"/>
  </bean>

  <service ref="openconfigParserFactory" interface="org.opennms.netmgt.telemetry.api.receiver.ParserFactory">
    <service-properties>
      <entry key="registration.export" value="true" />
    </service-properties>
  </service>

  <!-- Connector -->
  <bean id="openConfigConnectorFactory" class="org.opennms.netmgt.telemetry.protocols.openconfig.connector.OpenConfigConnectorFactory">
    <argument ref="telemetryRegistry" />
  </bean>

  <service ref="openConfigConnectorFactory" interface="org.opennms.netmgt.telemetry.api.receiver.ConnectorFactory">
    <service-properties>
      <entry key="registration.export" value="true" />
    </service-properties>
  </service>

</blueprint>
