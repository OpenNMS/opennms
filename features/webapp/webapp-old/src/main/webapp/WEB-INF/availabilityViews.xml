<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	   xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<!-- HTML reports -->

	<bean name="/report/availability/htmlreportviewer" class="org.opennms.web.view.AvailabilityReportView">
 		<property name="stylesheetLocation">
  			<value>file:${opennms.home}/etc/AvailabilityReports.xsl</value>
  		</property>
  		<property name="root">
  			<value>report</value>
  		</property>
  	</bean>
  	
  	<!-- PDF Reports -->
  	
  	<bean name="/report/availability/pdfreportviewer" class="org.opennms.web.view.FoAvailabilityReportView">
 		<property name="stylesheetLocation">
  			<value>file:${opennms.home}/etc/PDFAvailReport.xsl</value>
  		</property>
  		<property name = "contentType">
  			<value>application/pdf;charset=UTF-8</value>
		</property>
  	</bean>
  	
  	<!-- PDF Reports with embedded SVG calendar views -->
  	
  	<bean name="/report/availability/svgreportviewer" class="org.opennms.web.view.FoAvailabilityReportView">
 		<property name="stylesheetLocation">
  			<value>file:${opennms.home}/etc/SVGAvailReport.xsl</value>
  		</property>
  		<property name = "contentType">
  			<value>application/pdf;charset=UTF-8</value>
		</property>
  	</bean>
  		
</beans>
