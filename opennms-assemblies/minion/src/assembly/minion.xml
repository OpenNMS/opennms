<assembly
    xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd"
>
  <id>minion</id>
  <formats>
    <format>tar.gz</format>
  </formats>
  <includeBaseDirectory>false</includeBaseDirectory>
  <fileSets>
    <fileSet>
      <directory>${project.build.directory}/unpacked/container-minion/minion-${project.version}</directory>
      <outputDirectory>minion-${project.version}</outputDirectory>
    </fileSet>
    <fileSet>
      <directory>${project.build.directory}/unpacked/base-assembly</directory>
      <outputDirectory>minion-${project.version}</outputDirectory>
      <includes>
        <include>bin/ensure-user-ping.sh</include>
        <include>bin/fix-permissions</include>
        <include>bin/update-package-permissions</include>
      </includes>
      <fileMode>0755</fileMode>
    </fileSet>
    <fileSet>
      <directory>${project.build.directory}/unpacked/base-assembly</directory>
      <outputDirectory>minion-${project.version}</outputDirectory>
      <includes>
        <include>bin/org.opennms.features.scv.cli.jar</include>
      </includes>
      <fileMode>0644</fileMode>
    </fileSet>
    <fileSet>
      <directory>${project.basedir}/src/main/filtered/debian</directory>
      <outputDirectory>minion-${project.version}/debian</outputDirectory>
    </fileSet>
  </fileSets>
  <files>
    <file>
      <source>${project.build.directory}/unpacked/container-shared/org.opennms.container.shared-${project.version}/etc/container.service</source>
      <outputDirectory>minion-${project.version}/etc</outputDirectory>
      <destName>minion.service</destName>
      <fileMode>0644</fileMode>
      <filtered>true</filtered>
    </file>
    <file>
      <source>${project.build.directory}/unpacked/container-shared/org.opennms.container.shared-${project.version}/etc/container.init</source>
      <outputDirectory>minion-${project.version}/etc</outputDirectory>
      <destName>minion.init</destName>
      <fileMode>0755</fileMode>
      <filtered>true</filtered>
    </file>
    <file>
      <source>${project.build.directory}/unpacked/container-shared/org.opennms.container.shared-${project.version}/etc/container.conf</source>
      <outputDirectory>minion-${project.version}/etc</outputDirectory>
      <destName>minion.conf</destName>
      <fileMode>0640</fileMode>
      <filtered>true</filtered>
    </file>
    <file>
      <source>../../COPYING</source>
      <outputDirectory>minion-${project.version}/debian</outputDirectory>
      <destName>copyright</destName>
    </file>
  </files>
</assembly>
