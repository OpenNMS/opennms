#!/usr/bin/make -f

export DH_VERBOSE=1
export JAVA_HOME=$(shell bin/find-java.sh 1.8 11.9999)
export PACKAGE_NAME="opennms-minion"

export MINION_PREFIX=/usr/share/minion
export RUNTIME_PREFIX=/var/lib/minion
export REPO_PREFIX=$(MINION_PREFIX)/repositories
export LOGDIR=/var/log/minion
export SYSCONFDIR=/etc/default
export ETCDIR=/etc/minion

%:
	dh $@

# disable these
override_dh_update_autotools_config override_dh_strip_nondeterminism:

override_dh_auto_install:
	# make all the target directories
	mkdir -p \
		$$(pwd)/debian/$(PACKAGE_NAME)$(MINION_PREFIX) \
		$$(pwd)/debian/$(PACKAGE_NAME)$(MINION_PREFIX) \
		$$(pwd)/debian/$(PACKAGE_NAME)$(RUNTIME_PREFIX) \
		$$(pwd)/debian/$(PACKAGE_NAME)$(LOGDIR) \
		$$(pwd)/debian/$(PACKAGE_NAME)$(SYSCONFDIR)
	
	# copy all the files from the build tarball
	rsync -avr --exclude=debian $$(pwd)/ $$(pwd)/debian/$(PACKAGE_NAME)$(MINION_PREFIX)/
	
	# translate Minion prefix and etc directories in the init script, and put it in place
	sed -e "s,/opt/minion/etc,$(SYSCONFDIR),g" \
			-e "s,RUNAS=root,RUNAS=minion,g" \
			-e "s,/opt/minion,$(MINION_PREFIX),g" \
			-e 's,PING_REQUIRED=FALSE,PING_REQUIRED=TRUE,g' \
			$$(pwd)/etc/minion.init > $$(pwd)/debian/$(PACKAGE_NAME).minion.init \
		&& rm -f $$(pwd)/debian/$(PACKAGE_NAME)$(MINION_PREFIX)/etc/minion.init
	
	# move etc / data / deploy directories to where they will live
	mv $$(pwd)/debian/$(PACKAGE_NAME)$(MINION_PREFIX)/etc $$(pwd)/debian/$(PACKAGE_NAME)$(ETCDIR) \
		&& ln -s ../../..$(ETCDIR) $$(pwd)/debian/$(PACKAGE_NAME)$(MINION_PREFIX)/etc \
		&& mv $$(pwd)/debian/$(PACKAGE_NAME)$(MINION_PREFIX)/data $$(pwd)/debian/$(PACKAGE_NAME)$(RUNTIME_PREFIX)/ \
		&& ln -s ../../..$(RUNTIME_PREFIX)/data $$(pwd)/debian/$(PACKAGE_NAME)$(MINION_PREFIX)/data \
		&& mv $$(pwd)/debian/$(PACKAGE_NAME)$(MINION_PREFIX)/deploy $$(pwd)/debian/$(PACKAGE_NAME)$(RUNTIME_PREFIX)/ \
		&& ln -s ../../..$(RUNTIME_PREFIX)/deploy $$(pwd)/debian/$(PACKAGE_NAME)$(MINION_PREFIX)/deploy \
	
	# take care of some packaging/lintian warnings
	mkdir -p $$(pwd)/debian/$(PACKAGE_NAME)/usr/share/lintian/overrides
	install -c -m 644 $$(pwd)/debian/$(PACKAGE_NAME).lintian-overrides $$(pwd)/debian/$(PACKAGE_NAME)/usr/share/lintian/overrides/$(PACKAGE_NAME)
	rm -rf $$(pwd)/debian/$(PACKAGE_NAME)$(MINION_PREFIX)/COPYING
	
	# move the minion.conf to /etc/defaults and change the default RUNAS to minion
	sed -e "s,RUNAS=root,RUNAS=minion,g" \
		-e 's,PING_REQUIRED=FALSE,PING_REQUIRED=TRUE,g' \
		$$(pwd)/debian/$(PACKAGE_NAME)$(ETCDIR)/minion.conf > $$(pwd)/debian/$(PACKAGE_NAME)$(SYSCONFDIR)/minion \
		&& rm -rf $$(pwd)/debian/$(PACKAGE_NAME)$(ETCDIR)/minion.conf
	
	# change the logging directory to /var/log/minion
	sed -e "s,.{karaf.data}/log,$(LOGDIR),g" -e 's,/karaf.log,/minion.log,g' $$(pwd)/etc/org.ops4j.pax.logging.cfg > $$(pwd)/debian/$(PACKAGE_NAME)$(ETCDIR)/org.ops4j.pax.logging.cfg
	
	# set the default location
	echo "location = MINION" > $$(pwd)/debian/$(PACKAGE_NAME)$(ETCDIR)/org.opennms.minion.controller.cfg \
		&& echo "id = 00000000-0000-0000-0000-000000ddba11" >> $$(pwd)/debian/$(PACKAGE_NAME)$(ETCDIR)/org.opennms.minion.controller.cfg
	
	# install the init script
	dh_installinit --package=$(PACKAGE_NAME) --name=minion --no-start -u"defaults 21 19"
