#!/bin/sh

set -e

MINIONUSER="minion"
MINIONHOME="/usr/share/minion"

if ! getent group "$MINIONUSER" >/dev/null; then
	addgroup --system "$MINIONUSER"
fi

if ! getent passwd "$MINIONUSER" >/dev/null; then
	adduser \
		--system \
		--quiet \
		--home "$MINIONHOME" \
		--no-create-home \
		--disabled-password \
		--ingroup "$MINIONUSER" \
		"$MINIONUSER"
fi

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
