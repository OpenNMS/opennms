<assembly
    xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd"
>

    <id>bin</id>

    <formats>
        <format>tar.gz</format>
    </formats>

    <includeBaseDirectory>false</includeBaseDirectory>    

    <fileSets>

        <!-- Expanded Karaf Standard Distribution -->
        <fileSet>
            <directory>${project.build.directory}/dependency/apache-karaf-${karafVersion}</directory>
            <!-- Output to the root directory -->
            <outputDirectory></outputDirectory>
            <excludes>

                <!-- Exclude demos -->
                <exclude>**/demos/**</exclude>

                <!-- Exclude unnecessary documentations -->
                <exclude>LICENSE</exclude>
                <exclude>NOTICE</exclude>
                <exclude>README</exclude>
                <exclude>RELEASE-NOTES</exclude>
                <exclude>karaf-manual*.html</exclude>
                <exclude>karaf-manual*.pdf</exclude>

                <!-- Exclude bin so that we can set permissions correctly below -->
                <exclude>bin/**</exclude>

                <!-- Exclude etc files that we are providing replacements for -->
                <exclude>etc/custom.properties</exclude>
                <exclude>etc/system.properties</exclude>
                <exclude>etc/users.properties</exclude>
                <exclude>etc/org.apache.karaf.features.cfg</exclude>

            </excludes>
        </fileSet>

        <!-- Copy over bin/* separately to get the correct file mode -->
        <fileSet>
            <directory>${project.build.directory}/dependency/apache-karaf-${karafVersion}</directory>
            <!-- Output to the root directory -->
            <outputDirectory></outputDirectory>
            <includes>
                <include>bin/admin</include>
                <include>bin/client</include>
                <include>bin/start</include>
                <include>bin/stop</include>
            </includes>
            <fileMode>0755</fileMode>
        </fileSet>

        <!-- Copy over jar files -->
        <fileSet>
            <directory>src/main/distribution</directory>
            <!-- Output to the root directory -->
            <outputDirectory></outputDirectory>
        </fileSet>

        <fileSet>
            <directory>${project.build.directory}/classes/etc</directory>
            <outputDirectory>etc</outputDirectory>
            <lineEnding>unix</lineEnding>
        </fileSet>

        <fileSet>
            <directory>${project.build.directory}/features-repo</directory>
            <outputDirectory>system</outputDirectory>
        </fileSet>

    </fileSets>

    <files>
        <file>
            <source>${project.build.directory}/dependency/apache-karaf-${karafVersion}/bin/karaf</source>
            <outputDirectory>bin</outputDirectory>
            <destName>karaf</destName>
            <fileMode>0755</fileMode>
            <lineEnding>unix</lineEnding>
        </file>
        <file>
            <source>${project.build.directory}/dependency/opennms-branding.jar</source>
            <outputDirectory>lib</outputDirectory>
            <destName>opennms-branding.jar</destName>
        </file>
        <!-- Work around bug KARAF-5384 by including mina-core in the system repository -->
        <file>
            <source>${project.build.directory}/dependency/mina-core-${minaVersion}.jar</source>
            <outputDirectory>system/org/apache/mina/mina-core/${minaVersion}</outputDirectory>
        </file>
        <file>
            <source>${project.build.directory}/dependency/mina-core-${minaVersion}.jar.sha1</source>
            <outputDirectory>system/org/apache/mina/mina-core/${minaVersion}</outputDirectory>
        </file>
    </files>

</assembly>
