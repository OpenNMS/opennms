              <artifactItems>
                <artifactItem>
                  <groupId>org.opennms.container</groupId>
                  <artifactId>org.opennms.container.karaf</artifactId>
                  <version>${project.version}</version>
                  <type>tar.gz</type>
                </artifactItem>
              </artifactItems>
            </configuration>
          </execution>
