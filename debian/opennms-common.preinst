#! /bin/sh
# postrm script for opennms-common
#
# vim:set ai et sts=4 sw=4 tw=0:


if [ -d /usr/share/opennms ]; then
    echo "Backing up existing /usr/share/opennms  ..."
    mv /usr/share/opennms /usr/share/opennms.backup.$(date +%s)
fi

# If the user has /etc/opennms lets back it up
if [ -d /etc/opennms  ]; then
    echo "Backing up existing /etc/opennms ..."
    mv /etc/opennms /etc/opennms.backup.$(date +%s)
fi

exit 0