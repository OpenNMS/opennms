<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:cm="http://aries.apache.org/blueprint/xmlns/blueprint-cm/v1.1.0"
	xmlns:ext="http://aries.apache.org/blueprint/xmlns/blueprint-ext/v1.1.0"
	xsi:schemaLocation="
		http://www.osgi.org/xmlns/blueprint/v1.0.0 
		http://www.osgi.org/xmlns/blueprint/v1.0.0/blueprint.xsd
		http://aries.apache.org/blueprint/xmlns/blueprint-cm/v1.1.0
		http://aries.apache.org/schemas/blueprint-cm/blueprint-cm-1.1.0.xsd
		http://aries.apache.org/blueprint/xmlns/blueprint-ext/v1.1.0
		http://aries.apache.org/schemas/blueprint-ext/blueprint-ext-1.1.xsd
">

	<bean id="imap" class="org.opennms.netmgt.provision.detector.factory.async.ImapDetectorFactory">
	</bean>
	<service id="imapDetector" ref="imap"
		interface="org.opennms.netmgt.provision.AsyncDetectorFactory">
		<service-properties>
			<entry key="implementation"
				value="org.opennms.netmgt.provision.detector.simple.ImapDetector" />
		</service-properties>
	</service>
	
	<bean id="http" class="org.opennms.netmgt.provision.detector.factory.async.HttpDetectorFactory">
	</bean>
	<service id="httpDetector" ref="http"
		interface="org.opennms.netmgt.provision.AsyncDetectorFactory">
		<service-properties>
			<entry key="implementation"
				value="org.opennms.netmgt.provision.detector.simple.HttpDetector" />
		</service-properties>
	</service>
	
	<bean id="ftp" class="org.opennms.netmgt.provision.detector.factory.async.FtpDetectorFactory">
	</bean>
	<service id="ftpDetector" ref="ftp"
		interface="org.opennms.netmgt.provision.AsyncDetectorFactory">
		<service-properties>
			<entry key="implementation"
				value="org.opennms.netmgt.provision.detector.simple.FtpDetector" />
		</service-properties>
	</service>


</blueprint>
