#!/bin/sh -

OPENNMS_HOME="${install.dir}"

if [ -f "$OPENNMS_HOME/etc/opennms.conf" ]; then
	. "$OPENNMS_HOME/etc/opennms.conf"
fi

exec ${install.bin.dir}/runjava -r -- \
     $ADDITIONAL_MANAGER_OPTIONS -Dopennms.home="$OPENNMS_HOME" -cp "$OPENNMS_HOME/lib/opennms_bootstrap.jar:$OPENNMS_HOME/lib/opennms_install.jar:$OPENNMS_HOME/lib/org.opennms.core.logging-${project.version}.jar:$OPENNMS_HOME/lib/org.opennms.core.logging.log4j-${project.version}.jar" org.opennms.install.Installer "$@"
