  </automations>
  
  <triggers>
    <trigger name="selectPathOutagesNodes" operator="&gt;=" row-count="1" >
      <statement>
        SELECT nodeId AS _nodeid,
               now() AS _ts,
               lastEventTime AS _eventtime_from_node_up
          FROM alarms
         WHERE eventuei='uei.opennms.org/nodes/nodeUp'
      </statement>
    </trigger>

