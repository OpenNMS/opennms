<surveillance-view-configuration xmlns="http://xmlns.opennms.org/xsd/config/surveillance-views" default-view="default">
   <views>
      <view name="default" refresh-seconds="300">
         <rows>
            <row-def label="Routers">
               <category name="Routers"/>
            </row-def>
            <row-def label="Switches">
               <category name="Switches"/>
            </row-def>
            <row-def label="Servers">
               <category name="Servers"/>
            </row-def>
         </rows>
         <columns>
            <column-def label="PROD">
               <category name="Production"/>
            </column-def>
            <column-def label="TEST">
               <category name="Test"/>
            </column-def>
            <column-def label="DEV">
               <category name="Development"/>
            </column-def>
         </columns>
      </view>
   </views>
</surveillance-view-configuration>