            <trend-attribute key="sparkHighlightLineColor" value="#4c9d29"/>
        </trend-attributes>
        <descriptionLink>alarm/list.htm</descriptionLink>
        <description>${intValue[23]} Unacknowledged Alarm(s)</description>
