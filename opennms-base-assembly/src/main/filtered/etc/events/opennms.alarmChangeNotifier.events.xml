        <operinstruct></operinstruct>
        <alarm-data reduction-key="%uei%:%nodeid%:%interface%:%parm[testParam]%"
                    clear-key="uei.opennms.org/plugin/AlarmChangeNotificationEvent/TestAlarm/genericAlarmRaise:%parm[testParam]%"
                    alarm-type="2"
                    auto-clean="false"/>
    </event>

