    <downtime interval="30000" begin="300000" end="43200000" />  <!-- 30s, 5m, 12h -->
    <downtime interval="300000" begin="43200000" end="432000000" />  <!-- 5m, 12h, 5d -->
    <downtime begin="432000000" delete="true" />         <!-- anything after 5 days delete -->
  </package>
  
