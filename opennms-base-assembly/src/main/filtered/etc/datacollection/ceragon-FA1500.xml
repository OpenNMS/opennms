   <!-- Ceragon FA1500 - Unit - Most Severe Alarm - Node Level Stats -->
   <group name="ceragonfa1500-device-status" ifType="ignore">
      <mibObj oid=".1.3.6.1.4.1.2281.2.1.20" instance="0" alias="genMostSevereAlarm" type="integer"/>
