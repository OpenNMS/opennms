<assembly
    xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd"
>
  <id>daemon</id>
  <formats>
    <format>tar.gz</format>
  </formats>
  <includeBaseDirectory>false</includeBaseDirectory>
  <fileSets>
    <fileSet>
      <includes>
        <include>README*</include>
        <include>LICENSE*</include>
        <include>NOTICE*</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>${project.build.outputDirectory}/bin</directory>
      <outputDirectory>bin</outputDirectory>
      <lineEnding>unix</lineEnding>
      <!-- Mark files in bin as executable -->
      <fileMode>0755</fileMode>
    </fileSet>
    <fileSet>
      <directory>${project.build.outputDirectory}/etc</directory>
      <outputDirectory>etc</outputDirectory>
    </fileSet>
    <fileSet>
      <directory>${project.build.directory}/jasper</directory>
      <outputDirectory>etc/report-templates</outputDirectory>
    </fileSet>
    <fileSet>
      <directory>${project.build.outputDirectory}/contrib</directory>
      <includes>
        <include>**/*.pl</include>
        <include>**/*.py</include>
        <include>**/*.sh</include>
      </includes>
      <outputDirectory>contrib</outputDirectory>
      <!-- Mark scripts in contrib as executable -->
      <fileMode>0755</fileMode>
    </fileSet>
    <fileSet>
      <directory>${project.build.outputDirectory}/contrib</directory>
      <excludes>
        <exclude>**/*.pl</exclude>
        <exclude>**/*.py</exclude>
        <exclude>**/*.sh</exclude>
      </excludes>
      <outputDirectory>contrib</outputDirectory>
    </fileSet>
    <fileSet>
      <directory>${project.build.outputDirectory}/logs</directory>
      <outputDirectory>logs</outputDirectory>
    </fileSet>
    <fileSet>
      <directory>${project.build.directory}/jasperstudio-extension</directory>
      <outputDirectory>contrib/jasperstudio-extension</outputDirectory>
    </fileSet>
    <fileSet>
      <directory>${project.build.outputDirectory}/share</directory>
      <outputDirectory>share</outputDirectory>
    </fileSet>
    <fileSet>
      <directory>${project.build.directory}/jmx</directory>
      <outputDirectory>lib</outputDirectory>
    </fileSet>
    <fileSet>
      <directory>${project.build.directory}/remote-poller/etc</directory>
      <outputDirectory>contrib/remote-poller</outputDirectory>
    </fileSet>
    <fileSet>
      <directory>${project.build.directory}/remote-poller/bin</directory>
      <outputDirectory>bin</outputDirectory>
      <!-- Mark files in bin as executable -->
      <fileMode>0755</fileMode>
    </fileSet>
    <fileSet>
      <directory>${project.build.directory}/remote-poller/lib</directory>
      <outputDirectory>bin</outputDirectory>
    </fileSet>
  </fileSets>
  <dependencySets>
    <dependencySet>
      <useProjectArtifact>false</useProjectArtifact>
      <outputFileNameMapping>opennms_bootstrap.jar</outputFileNameMapping>
      <outputDirectory>lib</outputDirectory>
      <useStrictFiltering>true</useStrictFiltering>
      <includes>
        <include>org.opennms:opennms-bootstrap:jar:${project.version}</include>
      </includes>
    </dependencySet>
    <dependencySet>
      <useProjectArtifact>false</useProjectArtifact>
      <outputFileNameMapping>opennms_install.jar</outputFileNameMapping>
      <outputDirectory>lib</outputDirectory>
      <useStrictFiltering>true</useStrictFiltering>
      <includes>
        <include>org.opennms:opennms-install:jar:${project.version}</include>
      </includes>
    </dependencySet>
    <dependencySet>
      <useProjectArtifact>false</useProjectArtifact>
      <outputFileNameMapping>opennms_system_report.jar</outputFileNameMapping>
      <outputDirectory>lib</outputDirectory>
      <useStrictFiltering>true</useStrictFiltering>
      <includes>
        <include>org.opennms.features:org.opennms.features.system-report:jar:${project.version}</include>
      </includes>
    </dependencySet>
    <dependencySet>
      <useProjectArtifact>false</useProjectArtifact>
      <outputDirectory>lib/endorsed</outputDirectory>
      <useStrictFiltering>true</useStrictFiltering>
      <includes>
        <!-- <include>org.apache.servicemix.specs:org.apache.servicemix.specs.jaxb-api-2.2</include> -->
        <include>org.apache.servicemix.bundles:org.apache.servicemix.bundles.jaxb-impl</include>
      </includes>
    </dependencySet>
    <dependencySet>
      <useProjectArtifact>false</useProjectArtifact>
      <outputDirectory>lib</outputDirectory>
      <useStrictFiltering>true</useStrictFiltering>
      <excludes>
        <exclude>org.apache.servicemix.bundles:org.apache.servicemix.bundles.jaxb-impl</exclude>
        <exclude>org.opennms:opennms-bootstrap</exclude>
        <exclude>org.opennms:opennms-install</exclude>
        <exclude>org.opennms.features:org.opennms.features.system-report</exclude>
        <exclude>org.opennms:opennms-jasperstudio-extension</exclude>
        <exclude>org.slf4j:slf4j-jdk14</exclude>
        <!-- Exclude the dependency POMs -->
        <exclude>*:pom</exclude>
      </excludes>
    </dependencySet>
    <dependencySet>
      <useProjectArtifact>false</useProjectArtifact>
      <outputDirectory>lib</outputDirectory>
      <includes>
        <!-- adds httpasyncclient-osgi to /lib class path - only used by Elasticsearch OSGi plugin -->
        <include>org.apache.httpcomponents:httpasyncclient-osgi:jar:${httpasyncclientVersion}</include>
      </includes>
    </dependencySet>
  </dependencySets>
</assembly>
