<assembly>
  <id>daemon</id>
  <formats>
    <format>tgz</format>
  </formats>
  <includeBaseDirectory>false</includeBaseDirectory>
  <fileSets>
    <fileSet>
      <includes>
        <include>README*</include>
        <include>LICENSE*</include>
        <include>NOTICE*</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>target/classes/bin</directory>
      <outputDirectory>bin</outputDirectory>
      <lineEnding>unix</lineEnding>
      <fileMode>0755</fileMode>
    </fileSet>
    <fileSet>
      <directory>target/classes/etc</directory>
      <outputDirectory>etc</outputDirectory>
    </fileSet>
    <fileSet>
      <directory>target/classes/contrib</directory>
      <outputDirectory>contrib</outputDirectory>
    </fileSet>
    <fileSet>
      <directory>target/classes/logs</directory>
      <outputDirectory>logs</outputDirectory>
    </fileSet>
    <fileSet>
      <directory>target/classes/share</directory>
      <outputDirectory>share</outputDirectory>
    </fileSet>
    <fileSet>
      <directory>target/dependency/xsds</directory>
      <outputDirectory>share/xsds</outputDirectory>
    </fileSet>
    <fileSet>
      <directory>target/dependency</directory>
      <outputDirectory>jetty-webapps/opennms</outputDirectory>
      <excludes>
        <exclude>WEB-INF/lib/*</exclude>
        <exclude>WEB-INF/log4j.properties</exclude>
        <exclude>xsds</exclude>
        <exclude>xsds/*</exclude>
      </excludes>
    </fileSet>
    <fileSet>
      <directory>target/classes/jetty-webapps/ROOT</directory>
      <outputDirectory>jetty-webapps/ROOT</outputDirectory>
    </fileSet>
    <fileSet>
      <directory>target/dependency/WEB-INF/lib</directory>
      <outputDirectory>lib</outputDirectory>
      <excludes>
        <exclude>opennms-webapp-*.jar</exclude>
        <exclude>gwt-*.jar</exclude>
        <exclude>extremecomponents-*.jar</exclude>
        <exclude>jstl-*.jar</exclude>
        <exclude>jsp-api-*.jar</exclude>
        <exclude>servlet-api-*.jar</exclude>
         <exclude>com.springsource.javax.xml.bind*.jar</exclude>
      </excludes>
    </fileSet>
    <fileSet>
      <directory>target/dependency/WEB-INF/lib</directory>
      <outputDirectory>jetty-webapps/opennms/WEB-INF/lib</outputDirectory>
      <includes>
        <include>opennms-webapp-*.jar</include>
        <include>gwt-*.jar</include>
        <include>extremecomponents-*.jar</include>
        <exclude>jsp-api-*.jar</exclude>
        <exclude>jstl-*.jar</exclude>
        <exclude>servlet-api-*.jar</exclude>
      </includes>
    </fileSet>
  </fileSets>
  <dependencySets>
    <dependencySet>
       <outputFileNameMapping>opennms_bootstrap.jar</outputFileNameMapping>
       <outputDirectory>lib</outputDirectory>
       <includes>
         <include>org.opennms:opennms-bootstrap</include>
       </includes>
    </dependencySet>
    <dependencySet>
       <outputFileNameMapping>opennms_install.jar</outputFileNameMapping>
       <outputDirectory>lib</outputDirectory>
       <includes>
         <include>org.opennms:opennms-install</include>
       </includes>
    </dependencySet>
    <dependencySet>
       <outputFileNameMapping>libjicmp.${extension}</outputFileNameMapping>
       <outputDirectory>lib</outputDirectory>
       <!-- all the platforms need to be listed until the IncludesArtifactFiler supports wildcards -->
       <includes>
         <include>org.opennms:opennms-icmp-jni-macosx</include>
         <include>org.opennms:opennms-icmp-jni-linux</include>
         <include>org.opennms:opennms-icmp-jni-freebsd</include>
         <include>org.opennms:opennms-icmp-jni-solaris</include>
       </includes>
    </dependencySet>
    <dependencySet>
       <outputFileNameMapping>libjrrd.${extension}</outputFileNameMapping>
       <outputDirectory>lib</outputDirectory>
       <!-- all the platforms need to be listed until the IncludesArtifactFiler supports wildcards -->
       <includes>
         <include>org.opennms:opennms-rrdtool-jni-macosx</include>
         <include>org.opennms:opennms-rrdtool-jni-linux</include>
         <include>org.opennms:opennms-rrdtool-jni-freebsd</include>
         <include>org.opennms:opennms-rrdtool-jni-solaris</include>
       </includes>
    </dependencySet>
    <dependencySet>
      <outputDirectory>lib/endorsed</outputDirectory>
      <includes>
         <include>javax.xml.bind:com.springsource.javax.xml.bind</include>
      </includes>
    </dependencySet>
    <dependencySet>
      <outputDirectory>lib</outputDirectory>
      <excludes>
         <exclude>javax.xml.bind:com.springsource.javax.xml.bind</exclude>
         <exclude>org.opennms:opennms-bootstrap</exclude>
         <exclude>org.opennms:opennms-install</exclude>
         <exclude>org.opennms:opennms-icmp-jni-macosx</exclude>
         <exclude>org.opennms:opennms-icmp-jni-linux</exclude>
         <exclude>org.opennms:opennms-icmp-jni-freebsd</exclude>
         <exclude>org.opennms:opennms-icmp-jni-solaris</exclude>
         <exclude>org.opennms:opennms-rrdtool-jni-macosx</exclude>
         <exclude>org.opennms:opennms-rrdtool-jni-linux</exclude>
         <exclude>org.opennms:opennms-rrdtool-jni-freebsd</exclude>
         <exclude>org.opennms:opennms-rrdtool-jni-solaris</exclude>
      </excludes>
    </dependencySet>
  </dependencySets>
</assembly>
