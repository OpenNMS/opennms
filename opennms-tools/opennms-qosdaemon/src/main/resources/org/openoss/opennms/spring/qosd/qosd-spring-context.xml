	<bean id="qosdConfigProperty" class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
		<property name="systemPropertiesModeName" value="SYSTEM_PROPERTIES_MODE_OVERRIDE"/>
		<property name="properties">
			<props>
				<prop key="qosd.config.directory">${opennms.home}/etc</prop>
			</props>
		</property>
	</bean>

	<bean id="propertyConfigurer" class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer" depends-on="qosdConfigProperty">
		<property name="location" value="file:${qosd.config.directory}/qosd.properties"/>
	</bean>

	<bean id="QoSD" class="org.openoss.opennms.spring.qosd.QoSDimpl2">
			<property name="nodeDao" ref="nodeDao" />
			<property name="eventIpcManager" ref="eventIpcManager" />
			<property name="alarmDao" ref="alarmDao" />
			<property name="assetRecordDao" ref="assetRecordDao" />
			<property name="alarmListConnectionManager" ref="AlarmListConnectionManagerSpringImpl" />
			<property name="onmsAlarmOssjMapper" ref="onmsAlarmOssjMapper" />
			<property name="ossDao" ref="ossDao" />
	</bean>
	
